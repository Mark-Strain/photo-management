{
  "name": "photo-management",
  "version": "0.1.0",
  "description": "Desktop photo management application with tagging and search",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run build:renderer",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:prod": "tsc && webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"wait-on dist/main/main.js && electron .\"",
    "build:watch": "concurrently \"tsc -w\" \"webpack --config webpack.renderer.config.js --watch\"",
    "generate-icons": "node scripts/generate-icons.js",
    "package": "npm run build:prod && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "package:win": "npm run build:prod && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "package:dir": "npm run build:prod && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "package:mac": "npm run build:prod && electron-builder --mac",
    "package:linux": "npm run build:prod && electron-builder --linux",
    "package:all": "npm run build:prod && electron-builder --win --mac --linux"
  },
  "keywords": [
    "photo",
    "management",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.10.0",
    "@types/sql.js": "^1.4.5",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^10.1.0",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "png2icons": "^2.0.1",
    "style-loader": "^3.3.3",
    "to-ico": "^1.1.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "googleapis": "^129.0.0",
    "sharp": "^0.33.0",
    "sql.js": "^1.10.3"
  },
  "build": {
    "appId": "com.photomanagement.app",
    "productName": "Photo Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/renderer/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.photography"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Graphics"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
